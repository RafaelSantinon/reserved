            <div class="table">
                {% for table in tables %}
                    <div class="table-reserved">
                        <form action="/free-table?_method=PUT" class="table-for-reserved" method="POST">
                            <h3>Mesa nÃºmero: {{table.number}}</h3>
                            <h3>Lugares: {{table.seats}}</h3>
